<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/self_bg"
    android:orientation="vertical">
    <com.wing.test.carhousekeeper.view.CuteActionBar
        android:id="@+id/view_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/std_height" />
    <LinearLayout
        android:id="@+id/imgHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="旧密码"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textColor="@color/color_ffffff"/>

        <EditText
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:background="@null"
            android:hint="请输入旧密码"
            android:textColorHint="@color/color_68696f"
            android:textColor="@color/color_ffffff"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/self_update_password_eye"
            android:visibility="invisible"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@color/color_ffffff"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textColor="@color/color_ffffff"/>

        <EditText
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:background="@null"
            android:maxLines="1"
            android:ellipsize="end"
            android:hint="请输入60-20位新密码"
            android:textColorHint="@color/color_68696f"
            android:textColor="@color/color_ffffff"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/self_update_password_eye"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@color/color_ffffff"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color_ffffff"/>

        <EditText
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:background="@null"
            android:maxLines="1"
            android:ellipsize="end"
            android:hint="请再次输入密码"
            android:textColorHint="@color/color_68696f"
            android:textColor="@color/color_ffffff"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/self_update_password_eye"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@color/color_ffffff"
        android:layout_marginBottom="20dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/self_update_password_submt"/>
</LinearLayout>